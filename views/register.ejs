<%- include("./shared/header.ejs") %>

<div class="container text-center my-5">

  <div class="user my-4">
    <i class="far fa-edit user-icon mb-3"></i>
    <h4 class="register">Create an Account</h4>
  </div>

  <div class="card p-4 p-md-5 w-100 w-md-50 m-auto shadow-sm" style="max-width: 500px;">
    <form class="form form--register">

      <div class="form-group mb-3">
        <input
          id="username"
          class="form-control"
          placeholder="Username"
          type="text"
          name="username"
          required
        >
      </div>

      <div class="form-group mb-3">
        <input
          id="name"
          class="form-control"
          placeholder="Full Name"
          type="text"
          name="name"
          required
        >
      </div>

      <div class="form-group mb-3">
        <input
          id="email"
          class="form-control"
          placeholder="Email Address"
          type="email"
          name="email"
          required
        >
      </div>

      <div class="form-group mb-3">
        <input
          id="password"
          class="form-control"
          placeholder="Password (min 8 characters)"
          type="password"
          minlength="8"
          name="password"
          required
        >
      </div>

      <div class="form-group mb-3">
        <input
          id="password-confirm"
          class="form-control"
          placeholder="Confirm Password"
          type="password"
          minlength="8"
          name="passwordConfirm"
          required
        >
      </div>

      <button class="btn btn-default-outline w-100 my-3 rounded-pill btn--register">
        Register
      </button>

      <p class="mt-3 mb-0 text-muted">
        Already have an account?
        <a href="/login" class="text-primary font-weight-bold">
          Login here
        </a>
      </p>

    </form>
  </div>
</div>

<%- include("./shared/footer.ejs") %>
