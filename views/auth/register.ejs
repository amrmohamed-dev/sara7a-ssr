<%- include("../shared/header.ejs") %>

<div class="container text-center my-5">

  <div class="user my-4">
    <i class="far fa-edit user-icon mb-3"></i>
    <h4 class="register">Create an Account</h4>
  </div>

  <div class="card p-4 p-md-5 w-100 w-md-50 m-auto shadow-sm" style="max-width: 500px;">
    <form class="form form--register">

      <div class="form-group mb-4">
        <input
          id="username"
          class="form-control"
          placeholder=""
          type="text"
          name="username"
          required
        >
        <label class="form-label">Username</label>
      </div>

      <div class="form-group mb-4">
        <input
          id="name"
          class="form-control"
          placeholder=""
          type="text"
          name="name"
          required
        >
        <label class="form-label">Full Name</label>
      </div>

      <div class="form-group mb-4">
        <input
          id="email"
          class="form-control"
          placeholder=""
          type="email"
          name="email"
          required
        >
        <label class="form-label">Email Address</label>
      </div>

      <div class="form-group mb-4">
        <input
          id="password"
          class="form-control"
          placeholder=""
          type="password"
          minlength="8"
          name="password"
          required
        >
        <label class="form-label">Password (min 8 characters)</label>
      </div>

      <div class="form-group mb-4">
        <input
          id="password-confirm"
          class="form-control"
          placeholder=""
          type="password"
          minlength="8"
          name="passwordConfirm"
          required
        >
        <label class="form-label">Confirm Password</label>
      </div>

      <button class="btn btn-default-outline w-100 my-3 rounded-pill btn--register">
        Register
      </button>

      <p class="mt-3 mb-0 text-muted">
        Already have an account?
        <a href="/login" class="text-primary font-weight-bold">
          Login here
        </a>
      </p>

    </form>
  </div>
</div>

<%- include("../shared/footer.ejs") %>
