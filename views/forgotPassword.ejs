<%- include("./shared/header.ejs") %>

<div class="container text-center my-5">
  <div class="user my-4">
    <i class="fas fa-unlock-alt user-icon mb-3"></i>
    <h4 class="login">Forgot your password?</h4>
  </div>

  <div class="card p-4 p-md-5 w-100 w-md-50 m-auto shadow-sm" style="max-width: 500px;">
    <div class="form form--forgot-password">
      <div class="form-group mb-3">
        <input
          id="email"
          class="form-control"
          placeholder="Enter your email"
          type="email"
          name="email"
          required
        />
      </div>

      <button class="btn btn-default-outline w-100 my-3 rounded-pill btn-sendOtp">
        Send OTP
      </button>

      <p class="mt-3 mb-0 text-muted">
        Remember your password?
        <a href="/login" class="text-primary font-weight-bold">Login here</a>
      </p>
    </div>
  </div>
</div>

<!-- OTP Modal -->
<div class="modal fade" id="otpModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content p-4">
      <div class="modal-header border-0">
        <h5 class="modal-title">Enter OTP</h5>
        <button type="button" class="btn btn-close" data-bs-dismiss="modal" aria-label="Close">X</button>
      </div>

      <div class="modal-body text-center">
        <p class="text-muted mb-4">Enter the 6-digit code we sent to your email</p>

        <div class="d-flex justify-content-center gap-2 mb-3">
          <% for(let i = 0; i < 6; i++) { %>
            <input
              type="text"
              name="otp_<%= i %>"
              maxlength="1"
              class="otp-input form-control text-center"
              style="width: 45px; height: 45px; font-size: 1.5rem; margin: 2px;"
              required
            />
          <% } %>
        </div>

        <button class="btn btn-primary w-100" id="verifyOtpBtn">Verify OTP</button>

        <div class="text-center mt-3">
          <button id="resendOtpBtn" class="btn btn-link text-decoration-none" disabled>
            Resend OTP <span id="countdown">(60)</span>
          </button>
        </div>

      </div>
    </div>
  </div>
</div>

<!-- Reset Password Modal -->
<div class="modal fade" id="resetModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content p-4">
      <div class="modal-header border-0">
        <h5 class="modal-title">Reset your password</h5>
        <button type="button" class="btn btn-close" data-bs-dismiss="modal" aria-label="Close">X</button>
      </div>

      <div class="modal-body">
        <form id="resetForm" class="form form--reset-password">
          <div class="form-group mb-3">
            <input
              id="password"
              class="form-control"
              type="password"
              placeholder="Enter new password"
              minlength="8"
              required
            />
          </div>

          <div class="form-group mb-3">
            <input
              id="password-confirm"
              class="form-control"
              type="password"
              placeholder="Confirm new password"
              minlength="8"
              required
            />
          </div>

          <button id="resetPasswordBtn" class="btn btn-success w-100">Reset Password</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("./shared/footer.ejs") %>
